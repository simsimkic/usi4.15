<Window x:Class="Hospital.View.ChooseDate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hospital.View"
        mc:Ignorable="d"
        Title="ChooseDate" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Enter date:"/>
            <DatePicker x:Name="datePicker" Margin="0,5"/>
            <Button Content="Show" Margin="0,10" Click="AppointmentOverviewOnDate_Click"/>
        </StackPanel>
    </Grid>
</Window>
